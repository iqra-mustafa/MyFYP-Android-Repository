<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="vertical"
    tools:context=".Activity.Signup">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/black"
        android:elevation="4dp"
        app:title="Student Registration"
        app:titleTextColor="@color/medium_yellow"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Sign_Image"
                android:layout_width="69dp"
                android:layout_height="57dp"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                app:srcCompat="@drawable/logoqalammovement" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/chela_one"
                android:text="QalamMovement"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="270dp"
                android:fontFamily="@font/capriola"
                android:text="Student Details"
                android:textColor="@color/medium_yellow"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="20dp"
                android:background="@color/gray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Name_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="Student Name"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/Username_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Name"
                    android:inputType="text"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color"></EditText>

                <TextView
                    android:id="@+id/Gender_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="Gender"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <RadioGroup
                    android:id="@+id/gender_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:checkedButton="@id/male"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="13dp"
                        android:text="Male"
                        android:textSize="16dp"></RadioButton>

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Female"
                        android:textSize="16dp"></RadioButton>
                </RadioGroup>

                <TextView
                    android:id="@+id/DOB_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="Date Of Birth"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/DOB_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/border_edittext"
                    android:hint="DOB"
                    android:inputType="text"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color"></TextView>

                <TextView
                    android:id="@+id/Religion_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="Religion"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/Religion_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Religion"
                    android:inputType="text"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color"></EditText>

                <TextView
                    android:id="@+id/Nationality_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="Nationality"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/Nationality_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Nationality"
                    android:inputType="text"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color"></EditText>

            </LinearLayout>

            <TextView
                android:id="@+id/Academicdetail"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="270dp"
                android:fontFamily="@font/capriola"
                android:text="Family Details"
                android:textColor="@color/medium_yellow"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="14dp"
                android:background="@color/gray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/FatherName_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="Father Name"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/FatherName_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Father Name"
                    android:inputType="textEmailAddress"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color"></EditText>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Phone_Textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/archivo_narrow"
                        android:text="Contact Number"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/Pattern_Textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/archivo_narrow"
                        android:text="(03245067214)"
                        android:textColor="@color/Hint_color"
                        android:textSize="14sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/Phoneno_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Number"
                    android:inputType="phone"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color">

                </EditText>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Cnic_Textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/archivo_narrow"
                        android:text="Father CNIC"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/Pattern2_Textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/archivo_narrow"
                        android:text="(34567-4124567-0)"
                        android:textColor="@color/Hint_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/Cnic_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/border_edittext"
                    android:hint="CNIC"
                    android:inputType="text"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color"></EditText>

                <TextView
                    android:id="@+id/Address_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="Present Address"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <EditText
                    android:id="@+id/Address_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Address"
                    android:inputType="textPostalAddress"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color"></EditText>

                <TextView
                    android:id="@+id/Occupation_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="Father Occupation"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <EditText
                    android:id="@+id/Occupation_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Occupation"
                    android:inputType="text"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color"></EditText>

                <TextView
                    android:id="@+id/Income_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="Income"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/Income_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Father Income"
                    android:inputType="number"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/black"></EditText>
            </LinearLayout>


            <TextView
                android:id="@+id/Teamdetail"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="270dp"
                android:fontFamily="@font/capriola"
                android:text="School Details"
                android:textColor="@color/medium_yellow"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="14dp"
                android:background="@color/gray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/SchoolName_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="School Name"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/School_Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:popupBackground="@color/white" />

                <TextView
                    android:id="@+id/Section_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="Section"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/Section_Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:popupBackground="@color/white" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Register_Student_Button"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/gradient"
                android:fontFamily="@font/capriola"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="@color/medium_yellow"
                android:textSize="18sp"
                app:cornerRadius="46dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

