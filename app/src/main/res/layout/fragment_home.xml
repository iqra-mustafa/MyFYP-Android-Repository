<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="290dp"
                    android:background="@drawable/top_background_orange"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="190dp"
                        android:src="@drawable/dashboardimage"></ImageView>

                    <TextView
                        android:id="@+id/textView120"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="Welcome to QalamMovement !!"
                        android:textColor="@color/black"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView001"
                        android:layout_width="275dp"
                        android:layout_height="61dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="67dp"
                        android:text="F   R   O   M "
                        android:fontFamily="@font/capriola"
                        android:textColor="@color/white"
                        android:textSize="29sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView002"
                        android:layout_width="275dp"
                        android:layout_height="61dp"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="104dp"
                        android:fontFamily="@font/capriola"
                        android:text="STREET"
                        android:textColor="@color/black"
                        android:textSize="27sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView003"
                        android:layout_width="275dp"
                        android:layout_height="61dp"
                        android:layout_marginLeft="130dp"
                        android:layout_marginTop="137dp"
                        android:fontFamily="@font/capriola"
                        android:text="T  O"
                        android:textColor="@color/white"
                        android:textSize="29sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView004"
                        android:layout_width="275dp"
                        android:layout_height="61dp"
                        android:layout_marginLeft="108dp"
                        android:layout_marginTop="172dp"
                        android:fontFamily="@font/capriola"
                        android:text="SCHOOL"
                        android:textColor="@color/black"
                        android:textSize="27sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/dashboard_box"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                    <LinearLayout
                        android:id="@+id/student"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="63dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/white_btn"
                            android:orientation="vertical">

                            <ImageView

                                android:id="@+id/registeredstudent_image"
                                android:layout_width="43dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="9dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginBottom="2dp"
                                android:src="@drawable/icon_student" />

                            <TextView
                                android:id="@+id/registered_student"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginBottom="1dp"
                                android:text="150"
                                android:textColor="@color/white"
                                android:textSize="14dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="8dp"
                            android:text="Student"
                            android:textAlignment="center"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/volunteer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="63dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/white_btn"
                            android:orientation="vertical">

                            <ImageView

                                android:id="@+id/registeredvolunteer_image"
                                android:layout_width="43dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="9dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginBottom="2dp"
                                android:src="@drawable/icon_teacher" />

                            <TextView
                                android:id="@+id/registered_volunteer"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginBottom="1dp"
                                android:text="60"
                                android:textColor="@color/white"
                                android:textSize="14dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Volunteer"
                            android:textAlignment="center"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/schools"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="63dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/white_btn"
                            android:orientation="vertical">

                            <ImageView

                                android:id="@+id/registeredinstitution_image"
                                android:layout_width="wrap_content"
                                android:layout_height="42dp"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginBottom="1dp"
                                android:src="@drawable/icon_school" />

                            <TextView
                                android:id="@+id/registered_institution"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginBottom="1dp"
                                android:text="10"
                                android:textColor="@color/white"
                                android:textSize="14dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Institution"
                            android:textAlignment="center"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/teams"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="63dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/white_btn"
                            android:orientation="vertical">

                            <ImageView

                                android:id="@+id/registeredteam_image"
                                android:layout_width="wrap_content"
                                android:layout_height="39dp"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginBottom="2dp"
                                android:src="@drawable/icon_team" />

                            <TextView
                                android:id="@+id/registered_team"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginBottom="1dp"
                                android:text="8"
                                android:textColor="@color/white"
                                android:textSize="14dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="8dp"
                            android:text="Team"
                            android:textAlignment="center"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:id="@+id/Website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="108dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click Here To Visit Website"
                    android:textSize="16dp"
                    android:textColor="@color/red">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/listdata1"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/class_name1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Attendance"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/date1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/class_name1"
                                android:text="Click here to marl attendance."
                                android:textSize="11dp" />

                            <ImageView
                                android:id="@+id/student_id1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/arrow_right" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginHorizontal="2dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/medium_yellow" />
                        </RelativeLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/listdata2"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/class_name2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Schedule"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/date2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/class_name2"
                                android:text="Click here to view/make schedule"
                                android:textSize="11dp" />

                            <ImageView
                                android:id="@+id/student_id2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/arrow_right" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginHorizontal="2dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/medium_yellow" />
                        </RelativeLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/listdata3"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/class_name3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stationary"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/date3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/class_name3"
                                android:text="Click here for stationary request"
                                android:textSize="11dp" />

                            <ImageView
                                android:id="@+id/student_id4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/arrow_right" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginHorizontal="2dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/medium_yellow" />
                        </RelativeLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card4"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/listdata"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/class_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Emergency"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/class_name"
                                android:text="Click here to emergency service."
                                android:textSize="11dp" />

                            <ImageView
                                android:id="@+id/student_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/arrow_right" />

                        </RelativeLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>