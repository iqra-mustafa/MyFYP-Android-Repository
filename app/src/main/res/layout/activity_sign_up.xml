<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="vertical"
    tools:context=".Activity.Signup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Sign_Image"
                android:layout_width="69dp"
                android:layout_height="57dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/logoqalammovement" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/chela_one"
                android:text="QalamMovement"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="270dp"
                android:fontFamily="@font/archivo_narrow"
                android:text="Personal Details"
                android:textColor="@color/medium_yellow"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="20dp"
                android:background="@color/gray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Name_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="Full Name"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/Username_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Username"
                    android:inputType="text"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color"></EditText>

                <TextView
                    android:id="@+id/Email_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/Email_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color"></EditText>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Phone_Textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/archivo_narrow"
                        android:text="Contact Number"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/Pattern_Textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/archivo_narrow"
                        android:text="(03245067214)"
                        android:textColor="@color/Hint_color"
                        android:textSize="14sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/Phoneno_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Number"
                    android:inputType="phone"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color">

                </EditText>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Cnic_Textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/archivo_narrow"
                        android:text="CNIC"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/Pattern2_Textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/archivo_narrow"
                        android:text="(34567-4124567-0)"
                        android:textColor="@color/Hint_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/Cnic_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/border_edittext"
                    android:hint="CNIC"
                    android:inputType="phone"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color"></EditText>

                <TextView
                    android:id="@+id/Address_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="Present Address"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


                <EditText
                    android:id="@+id/Address_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Address"
                    android:inputType="textPostalAddress"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color"></EditText>

                <TextView
                    android:id="@+id/Password_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="Password"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/Password_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/border_edittext"
                    android:drawableRight="@drawable/visibility_off_icon"
                    android:longClickable="false"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/black"></EditText>

                <TextView
                    android:id="@+id/Reenterpassword_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="Confirm Password"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/Reenterpassword_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Re_enter Password"
                    android:inputType="textPassword"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/black"></EditText>
            </LinearLayout>

            <TextView
                android:id="@+id/Academicdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="270dp"
                android:fontFamily="@font/archivo_narrow"
                android:text="Academic Details"
                android:textColor="@color/medium_yellow"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="14dp"
                android:background="@color/gray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/UniversityName_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="University"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/UniversityName_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Univeristy"
                    android:inputType="text"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color"></EditText>

                <TextView
                    android:id="@+id/Degree_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="Degree"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/Degree_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Degree"
                    android:inputType="text"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color"></EditText>

                <TextView
                    android:id="@+id/Semester_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="Semester"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/Semester_Textfield"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border_edittext"
                    android:hint="Semester"
                    android:inputType="number"
                    android:padding="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/Hint_color"></EditText>
            </LinearLayout>


            <TextView
                android:id="@+id/Teamdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="270dp"
                android:fontFamily="@font/archivo_narrow"
                android:text="Team Details"
                android:textColor="@color/medium_yellow"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="14dp"
                android:background="@color/gray"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/Team_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="Team"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/Team_Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:popupBackground="@color/white" />

                <TextView
                    android:id="@+id/Day_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="Day"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/Day_Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:popupBackground="@color/white" />

                <TextView
                    android:id="@+id/School_Textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/archivo_narrow"
                    android:text="School/Madaris"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/School_Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:popupBackground="@color/white" />

                <ImageView
                    android:id="@+id/School_Image"
                    android:layout_width="482dp"
                    android:layout_height="230dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/school_2" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/archivo_narrow"
                        android:text="Location:  "
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Image_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/archivo_narrow"
                        android:text="@string/School_1_location"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/timing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/location"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/archivo_narrow"
                        android:text="Timming:  "
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/school_timing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Image_location"
                        android:layout_gravity="center"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/archivo_narrow"
                        android:text="10am - 12pm"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </RelativeLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Signin_Button"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/gradient"
                android:fontFamily="@font/capriola"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/medium_yellow"
                android:textSize="18sp"
                app:cornerRadius="46dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="40dp"
                    android:fontFamily="@font/antic"
                    android:text="Already Registered"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Login_Button"
                    android:layout_width="70dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="40dp"
                    android:background="#00000000"
                    android:fontFamily="@font/antic"
                    android:text="Log In"
                    android:textAllCaps="false"
                    android:textColor="@color/medium_yellow"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/Logedin_Button" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
